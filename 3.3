function countChar(string, letter) {
  charCounter = 0;
  for(i = 0; i < string.length; i++) {
    if(string.charAt(i) === letter){
      charCounter++;
    }
  }
  return charCounter;
}

function countBs(string) {
  return countChar(string, "B");
}
